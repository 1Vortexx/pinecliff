    <div class="container">
        <div class="banner">
            <h1>PINECLIFF COUNTY<br>ROLEPLAY</h1>
        </div>

        <div class="content">
            <div class="info-section">
                <p><i class="fas fa-info-circle"></i> <strong>Civilian License Application:</strong> This test covers driving knowledge, server rules, and roleplay understanding. You must score at least <strong>85%</strong> to qualify. Answer all questions honestly.</p>
            </div>

            <div id="loading" class="loading">
                <i class="fas fa-spinner"></i>
                <p>Loading application...</p>
            </div>

            <div id="error" class="error" style="display: none;"></div>
            <div id="success" class="success" style="display: none;"></div>

            <form id="civilianForm" style="display: none;">
                <div class="user-info">
                    <div class="form-group">
                        <label for="fullName"><i class="fas fa-user"></i> Full Name (IN-GAME) *</label>
                        <input type="text" id="fullName" required placeholder="Your in-game name">
                    </div>
                    <div class="form-group">
                        <label for="discordUsername"><i class="fab fa-discord"></i> Discord Username *</label>
                        <input type="text" id="discordUsername" required placeholder="e.g., username#0000 or @username">
                    </div>
                    <div class="form-group">
                        <label for="steamUsername"><i class="fab fa-steam"></i> Steam Username *</label>
                        <input type="text" id="steamUsername" required placeholder="Your Steam username">
                    </div>
                </div>

                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill" style="width: 0%"></div>
                </div>

                <div id="questionsContainer"></div>

                <div class="submit-section">
                    <button type="submit" class="btn btn-primary" id="submitBtn">
                        <i class="fas fa-paper-plane"></i> Submit Application
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const SUPABASE_URL = 'https://kyrwsuhcljhetjeavrjm.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Imt5cndzdWhjbGpoZXRqZWF2cmptIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjM3NDkyNjMsImV4cCI6MjA3OTMyNTI2M30.JBFSA-cVMV6bKcj86buLqAH7-d_IuwDqrjbJAcJfIA0';

        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        let questions = [];
        let startTime = Date.now();

        async function loadQuestions() {
            try {
                const { data, error } = await supabase
                    .from('civilian_app')
                    .select('*')
                    .order('question_number', { ascending: true });

                if (error) throw error;
                if (!data || data.length === 0) {
                    showError('No questions found. Please contact an administrator.');
                    return;
                }

                questions = data;
                renderQuestions();
                document.getElementById('loading').style.display = 'none';
                document.getElementById('civilianForm').style.display = 'block';
            } catch (error) {
                console.error('Error loading questions:', error);
                showError('Failed to load application: ' + error.message);
                document.getElementById('loading').style.display = 'none';
            }
        }

        function renderQuestions() {
            const container = document.getElementById('questionsContainer');
            container.innerHTML = '';

            const sections = {};
            questions.forEach(q => {
                if (!sections[q.section_number]) {
                    sections[q.section_number] = { name: q.section_name, questions: [] };
                }
                sections[q.section_number].questions.push(q);
            });

            Object.keys(sections).sort().forEach(sectionNum => {
                const section = sections[sectionNum];
                const sectionDiv = document.createElement('div');
                
                sectionDiv.innerHTML = `<div class="section-indicator">Section ${sectionNum} of 4 - ${escapeHtml(section.name)}</div>`;
                container.appendChild(sectionDiv);

                section.questions.forEach(question => {
                    const card = document.createElement('div');
                    card.className = 'question-card';
                    
                    card.innerHTML = `
                        <div class="question-header">
                            <span class="question-number"><i class="fas fa-question-circle"></i> Question ${question.question_number}</span>
                            <span class="section-badge">${escapeHtml(section.name)}</span>
                        </div>
                        <div class="question-text">${escapeHtml(question.question_text)}</div>
                        <div class="options">
                            <div class="option">
                                <input type="radio" id="q${question.question_number}_a" name="question_${question.question_number}" value="A" required>
                                <label for="q${question.question_number}_a">A) ${escapeHtml(question.option_a)}</label>
                            </div>
                            <div class="option">
                                <input type="radio" id="q${question.question_number}_b" name="question_${question.question_number}" value="B" required>
                                <label for="q${question.question_number}_b">B) ${escapeHtml(question.option_b)}</label>
                            </div>
                            <div class="option">
                                <input type="radio" id="q${question.question_number}_c" name="question_${question.question_number}" value="C" required>
                                <label for="q${question.question_number}_c">C) ${escapeHtml(question.option_c)}</label>
                            </div>
                            <div class="option">
                                <input type="radio" id="q${question.question_number}_d" name="question_${question.question_number}" value="D" required>
                                <label for="q${question.question_number}_d">D) ${escapeHtml(question.option_d)}</label>
                            </div>
                        </div>
                    `;
                    container.appendChild(card);
                });
            });

            trackProgress();
        }

        function escapeHtml(text) {
            if (!text) return '';
            const map = {'&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;'};
            return String(text).replace(/[&<>"']/g, m => map[m]);
        }

        function trackProgress() {
            const form = document.getElementById('civilianForm');
            form.addEventListener('change', () => {
                const answeredQuestions = new Set();
                
                questions.forEach(q => {
                    const answer = form.querySelector(`input[name="question_${q.question_number}"]:checked`);
                    if (answer) answeredQuestions.add(q.question_number);
                });

                const progress = (answeredQuestions.size / questions.length) * 100;
                document.getElementById('progressFill').style.width = progress + '%';
            });
        }

        function showError(message) {
            const errorDiv = document.getElementById('error');
            errorDiv.innerHTML = message;
            errorDiv.style.display = 'block';
            setTimeout(() => errorDiv.style.display = 'none', 5000);
        }

        function showSuccess(message) {
            const successDiv = document.getElementById('success');
            successDiv.innerHTML = message;
            successDiv.style.display = 'block';
        }

        document.getElementById('civilianForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';

            const fullName = document.getElementById('fullName').value;
            const discordUsername = document.getElementById('discordUsername').value;
            const steamUsername = document.getElementById('steamUsername').value;

            let correctAnswers = 0;
            const answers = {};

            questions.forEach(question => {
                const selectedAnswer = document.querySelector(`input[name="question_${question.question_number}"]:checked`)?.value;
                
                answers[question.question_number] = {
                    question: question.question_text,
                    selected: selectedAnswer,
                    correct: question.correct_answer,
                    isCorrect: selectedAnswer === question.correct_answer,
                    option_a: question.option_a,
                    option_b: question.option_b,
                    option_c: question.option_c,
                    option_d: question.option_d
                };

                if (selectedAnswer === question.correct_answer) {
                    correctAnswers++;
                }
            });

            const totalQuestions = questions.length;
            const scorePercentage = (correctAnswers / totalQuestions) * 100;
            const passed = scorePercentage >= 85;
            const timeTaken = Math.floor((Date.now() - startTime) / 1000);

            try {
                const { error } = await supabase
                    .from('civilian_responses')
                    .insert([{
                        full_name: fullName,
                        discord_username: discordUsername,
                        steam_username: steamUsername,
                        total_questions: totalQuestions,
                        correct_answers: correctAnswers,
                        score_percentage: scorePercentage.toFixed(2),
                        passed: passed,
                        answers: answers,
                        status: passed ? 'pending' : 'denied',
                        time_taken_seconds: timeTaken
                    }]);

                if (error) throw error;

                window.scrollTo(0, 0);
                document.getElementById('civilianForm').style.display = 'none';
                
                const resultMessage = passed 
                    ? `<i class="fas fa-trophy"></i> <strong>Congratulations!</strong> You scored ${scorePercentage.toFixed(1)}% (${correctAnswers}/${totalQuestions} correct). Your application will be reviewed by our staff team.`
                    : `<i class="fas fa-times-circle"></i> You scored ${scorePercentage.toFixed(1)}% (${correctAnswers}/${totalQuestions} correct). You need 85% or higher to qualify. Please study the server rules and driving guidelines, then try again later.`;
                
                showSuccess(resultMessage);

            } catch (error) {
                console.error('Error submitting:', error);
                showError('<i class="fas fa-exclamation-triangle"></i> Failed to submit application: ' + error.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Submit Application';
            }
        });

        loadQuestions();
    </script>
</body>
</html>
